{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template create an ntier app",
    "Parameters": {
        "vpcCidr": {
            "Description": "This paramter defines the cidr block for vpc",
            "Type": "String",
            "Default": "192.168.0.0/16"
        },
        "subnetCidrs": {
            "Description": "subnet cidrs",
            "Type": "CommaDelimitedList",
            "Default": "192.168.0.0/24, 192.168.1.0/24, 192.168.2.0/24, 192.168.3.0/24"
        }
    },
    "Resources": {
        "network": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "vpcCidr"
                },
                "EnableDnsHostnames": true,
                "EnableDnsSupport": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ntier"
                    }
                ]
            }
        },
        "web1subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "ap-south-1a",
                "CidrBlock": {
                    "Fn::Select": [
                        0,
                        {
                            "Ref": "subnetCidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "web1"
                    }
                ],
                "VpcId": {
                    "Ref": "network"
                }
            }
        },
        "web2subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "ap-south-1b",
                "CidrBlock": {
                    "Fn::Select": [
                        1,
                        {
                            "Ref": "subnetCidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "web2"
                    }
                ],
                "VpcId": {
                    "Ref": "network"
                }
            }
        },
        "db1subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "ap-south-1a",
                "CidrBlock": {
                    "Fn::Select": [
                        2,
                        {
                            "Ref": "subnetCidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "db1"
                    }
                ],
                "VpcId": {
                    "Ref": "network"
                }
            }
        },
        "db2subnet": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": "ap-south-1b",
                "CidrBlock": {
                    "Fn::Select": [
                        3,
                        {
                            "Ref": "subnetCidrs"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "db2"
                    }
                ],
                "VpcId": {
                    "Ref": "network"
                }
            }
        }
    }
}